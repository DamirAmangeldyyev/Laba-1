import random

num = random.randint(1,10)
name = input('Введите свое имя:')
print(name, 'давай сыграем в игру "Угадай число"?')
answer1 = input('Напишите "Да" если хотите сыграть и "Нет" если против:')
da = "Да"
net = "Нет"
if answer1 == da:
    print(name, "у вас есть 3 попытки отгадать число.")
    for i in range(3):
        try1 = int(input('Ваша попытка, напишите число:'))
        if try1 < num:
            print("Ваша", i+1, "попытка неверна. Подсказка: задуманное число больше", try1)
        elif try1 > num:
            print("Ваша", i+1, "попытка неверна. Подсказка: задуманное число меньше", try1)
        else:    
            print(name, "Отлично, вы отгодали! Это победа!")  
            break
    if try1 != num:
        print("Вы были близки к победе, цифра которая была загадана", num)
else:
    print('Пока! Приходи когда захочешь сыграть :)')
